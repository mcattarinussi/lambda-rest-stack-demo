{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": [
      "es2018"
    ],
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "strictPropertyInitialization": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src"
  ]
}